---
import BaseLayout from './BaseLayout.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    tags: string[];
    pubDate?: Date;
    image?: {
      url: string;
      alt: string;
    };
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <section class="relative min-h-screen py-16">
    <div class="container max-w-4xl px-4 mx-auto">

      <!-- Recipe Header -->
      <header class="mb-8 text-center">
        <h1 class="mb-4 text-4xl font-extrabold md:text-5xl">{frontmatter.title}</h1>
        {frontmatter.description && (
          <p class="text-xl text-gray-600">{frontmatter.description}</p>
        )}
      </header>

      {frontmatter.image && (
        <div class="mb-8 overflow-hidden rounded-lg shadow-lg">
          <img
            src={frontmatter.image.url}
            alt={frontmatter.image.alt}
            class="object-cover w-full h-64 md:h-96"
          />
        </div>
      )}

      <!-- Recipe Content -->
      <article class="p-8 bg-white shadow-lg rounded-xl">
        <div class="prose prose-lg max-w-none">
          <slot />
        </div>
      </article>

      <!-- Navigation -->
      <div class="mt-8">
        <a
          href="/resources"
          class="inline-block px-6 py-3 text-white transition-colors bg-blue-600 rounded-md hover:bg-blue-700">
          ‚Üê Back to Resources
        </a>
      </div>

    </div>
  </section>
</BaseLayout>
