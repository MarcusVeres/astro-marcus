---
import { ClientRouter } from "astro:transitions"; // CRITICAL FOR FUCKING GALLERY SLIDER TING

import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

import '../styles/global.css'

const { pageTitle } = Astro.props;
---

<html lang="en" class="font-inter">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Marcus Veres // Home Page">
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<title>Marcus Veres // {pageTitle}</title>

		<!-- Optimized Google Fonts - only 3 weights for better contrast -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">

		<!-- Page-specific head content -->
		<slot name="head" />

		<!-- TailwindPlus Elements script -->
		<script src="https://cdn.jsdelivr.net/npm/@tailwindplus/elements@1" type="module"></script>

		<!-- CRITICAL FOR PANDA GALLERY BULLSHIT -->
		<ClientRouter />

	</head>
	<body class="antialiased bg-gray-900">

		<Header />		
		<slot />
		<Footer />

		<script>
			import '../scripts/menu.js'
		</script>
		
	</body>
</html>
