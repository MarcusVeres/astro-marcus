---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

import '../styles/global.css'

const { pageTitle } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Author: the bestest boy. Length: 1 page. Price: priceless.">
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<title>Astro // {pageTitle}</title>

		<!-- No more CDN scripts needed! Tailwind is now built into your CSS -->
		<!-- TailwindPlus Elements script -->
		<!--
		<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
		<script src="https://cdn.jsdelivr.net/npm/@tailwindplus/elements@1" type="module"></script>
		-->

	</head>
	<body class="antialiased">
		<Header />
		
		<div class="max-w-6xl px-4 mx-auto">
			<h1 class="mb-8 text-3xl font-bold text-gray-900">{pageTitle}</h1>
		</div>
		
		<slot />
        
		<Footer />

		<script>
			import '../scripts/menu.js'
		</script>
	</body>
</html>
