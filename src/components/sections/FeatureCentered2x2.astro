const surtitle = "Embody your potential";
const title = "Work with me";
const subtitle = "Gain clarity, capability, and confidence."


const offerings = [
  {
    title: "Strategic Clarity Sessions",
    description: "Untangle your challenges with a clear plan and the confidence to execute it. Perfect for big decisions, stuck projects, or when you need an outside perspective that sees through the noise.",
    price: "$497 per session",
    link: "#",
    svgPath: "m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10",
  },
  {
    title: "Digital Transformation",
    description: "Your website is broken. Your message is unclear. Your tech is holding you back. I'll rebuild it all - strategy, design, development, deployment. You get a digital presence that actually works.",
    price: "Starting at $2,997",
    link: "#",
    svgPath: "M12 16.5V9.75m0 0 3 3m-3-3-3 3M6.75 19.5a4.5 4.5 0 0 1-1.41-8.775 5.25 5.25 0 0 1 10.233-2.33 3 3 0 0 1 3.758 3.848A3.752 3.752 0 0 1 18 19.5H6.75Z",
  },
  {
    title: "Communication Mastery",
    description: "Learn to present with confidence and speak with impact. Based on proven techniques that win speaking championships. Available for individuals or teams.",
    price: "$297 individual / $2,997 team workshop",
    link: "#",
    svgPath: "M8.625 12a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H8.25m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H12m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 0 1-2.555-.337A5.972 5.972 0 0 1 5.41 20.97a5.969 5.969 0 0 1-.474-.065 4.48 4.48 0 0 0 .978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25Z",
  },
  {
    title: "Not sure what you need? ",
    description: "[Let's talk - free 15-minute clarity call]",
    price: "FREE",
    link: "#",
    svgPath: "M7.864 4.243A7.5 7.5 0 0 1 19.5 10.5c0 2.92-.556 5.709-1.568 8.268M5.742 6.364A7.465 7.465 0 0 0 4.5 10.5a7.464 7.464 0 0 1-1.15 3.993m1.989 3.559A11.209 11.209 0 0 0 8.25 10.5a3.75 3.75 0 1 1 7.5 0c0 .527-.021 1.049-.064 1.565M12 10.5a14.94 14.94 0 0 1-3.6 9.75m6.633-4.596a18.666 18.666 0 0 1-2.485 5.33",
  },
]

---
<div class="py-12 xbg-gray-900 sm:py-16">
  <div class="px-6 mx-auto max-w-7xl lg:px-8">

    <div class="max-w-2xl mx-auto lg:text-center">
      <h2 class="font-semibold text-indigo-400 text-base/7">{ surtitle }</h2>
      <p class="mt-2 text-4xl font-semibold tracking-tight text-black text-pretty sm:text-5xl lg:text-balance">{ title }</p>
      <p class="mt-6 text-gray-300 text-lg/8">{ subtitle }</p>
    </div>

    <div class="max-w-2xl mx-auto mt-16 sm:mt-20 lg:mt-24 lg:max-w-4xl">
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-2 lg:gap-y-16">

        {offerings.map( offering => (

        <div class="relative pl-16">
          <dt class="font-semibold text-black text-base/7">
            <div class="absolute top-0 left-0 flex items-center justify-center bg-indigo-500 rounded-lg size-10">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="text-white size-6">
                <path d={ offering.svgPath } stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </div>
            {offering.title}
          </dt>
          <dd class="mt-2 text-gray-400 text-base/7">
            <p class="flex-auto">{ offering.description }</p>
            <p class="mt-6">
              <a href={ offering.link } class="font-semibold text-indigo-400 text-sm/6 hover:text-indigo-300">Learn more <span aria-hidden="true">â†’</span></a>
            </p>
          </dd>
        </div>

        ))}

      </dl>
    </div>

  </div>
</div>
