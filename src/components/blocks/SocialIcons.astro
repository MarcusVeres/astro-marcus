---
import socials from '../../data/socials.json';
---

<ul class="flex flex-row items-center justify-center space-x-2">
  {socials.map((social) => (
    <li>
      <a
        class="block p-3 text-white transition-all duration-500 ease-in-out bg-black bg-opacity-50 border border-black rounded-full shadow-sm hover:scale-110 hover:bg-black border-opacity-40 group"
        href={social.url}
        target="_blank"
        rel="noopener noreferrer"
      >
        <Fragment set:html={social.svg} />
      </a>
    </li>
  ))}
</ul>