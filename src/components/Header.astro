---
// src/components/Header.astro (Refactored)
import Logo from './atoms/Logo.astro';
import NavigationLinks from './blocks/NavigationLinks.astro';
import MobileMenu from './blocks/MobileMenu.astro';
---

<header class="relative z-10 bg-gray-900 isolate">
  <nav aria-label="Global" class="flex items-center justify-between p-6 mx-auto max-w-7xl lg:px-8">
    <!-- Logo -->
    <div class="flex lg:flex-1">
      <Logo />
    </div>
    
    <!-- Mobile menu button -->
    <div class="flex lg:hidden">
      <button type="button" command="show-modal" commandfor="mobile-menu" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400">
        <span class="sr-only">Open main menu</span>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
          <path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </button>
    </div>
    
    <!-- Desktop navigation -->
    <NavigationLinks />
    
    <!-- CTA -->
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a href="/contact" class="font-semibold text-white text-sm/6">
        Work with me <span aria-hidden="true">&rarr;</span>
      </a>
    </div>
  </nav>
  
  <!-- Mobile menu -->
  <MobileMenu />
</header>
