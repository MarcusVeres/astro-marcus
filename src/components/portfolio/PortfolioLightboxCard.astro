---
/**
 * Portfolio Lightbox Preview Card
 *
 * Displays portfolio item details in GLightbox popup.
 * Design: Image as background with glassmorphic panel at bottom
 */

interface Props {
  title: string;
  description: string;
  image: string;
  contentType?: 'simple' | 'case-study' | 'external' | 'iframe';
  caseStudyUrl?: string;
  externalUrl?: string;
  externalLabel?: string;
  links?: Array<{
    label: string;
    url: string;
    icon?: string;
  }>;
}

const {
  title,
  description,
  image,
  contentType = 'simple',
  caseStudyUrl,
  externalUrl,
  externalLabel = 'View Project',
  links = []
} = Astro.props;
---

<div class="lightbox-card">
  <!-- Background Image (covers full area) -->
  <div
    class="lightbox-bg"
    style={`background-image: url('${image}');`}
  ></div>

  <!-- Glassmorphic Panel (slides up on scroll) -->
  <div class="lightbox-panel">
    <!-- Drag Handle -->
    <div class="lightbox-handle">
      <div class="handle-bar"></div>
    </div>

    <!-- Content -->
    <div class="lightbox-content">
      <h2 class="lightbox-title">{title}</h2>
      <p class="lightbox-description">{description}</p>

      <!-- Action Buttons -->
      {contentType === 'case-study' && caseStudyUrl && (
        <a
          href={caseStudyUrl}
          class="btn-lightbox btn-primary"
          target="_blank"
        >
          Read Full Case Study
          <svg class="inline-block w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      )}

      {contentType === 'external' && externalUrl && (
        <a
          href={externalUrl}
          class="btn-lightbox btn-primary"
          target="_blank"
          rel="noopener noreferrer"
        >
          {externalLabel}
          <svg class="inline-block w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      )}

      <!-- Social Links -->
      {links.length > 0 && (
        <div class="lightbox-social-links">
          {links.map(link => (
            <a
              href={link.url}
              class="social-link"
              target="_blank"
              rel="noopener noreferrer"
            >
              {link.icon && <span class={`icon-${link.icon}`}></span>}
              {link.label}
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
</div>

<style>
  /* Base card container */
  .lightbox-card {
    position: relative;
    width: 100%;
    height: 90vh;
    max-width: 1400px;
    margin: 0 auto;
    overflow: hidden;
    border-radius: 16px;
  }

  /* Background Image */
  .lightbox-bg {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  /* Glassmorphic Panel */
  .lightbox-panel {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    max-height: 80%;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-top-left-radius: 24px;
    border-top-right-radius: 24px;
    overflow-y: auto;
    transition: transform 0.3s ease;
  }

  /* Drag Handle */
  .lightbox-handle {
    padding: 12px 0;
    display: flex;
    justify-content: center;
    cursor: grab;
  }

  .handle-bar {
    width: 48px;
    height: 4px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 2px;
  }

  /* Content Area */
  .lightbox-content {
    padding: 0 2rem 2rem 2rem;
    color: white;
  }

  .lightbox-title {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(to right, #fbbf24, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .lightbox-description {
    font-size: 1.125rem;
    line-height: 1.75;
    color: #d1d5db;
    margin-bottom: 1.5rem;
  }

  .btn-lightbox {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    margin-bottom: 1rem;
  }

  .btn-primary {
    background: linear-gradient(to right, #fbbf24, #ec4899);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(251, 191, 36, 0.3);
  }

  .lightbox-social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    color: #fbbf24;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.875rem;
  }

  .social-link:hover {
    background: rgba(251, 191, 36, 0.1);
    border-color: #fbbf24;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .lightbox-card {
      height: 95vh;
    }

    .lightbox-panel {
      max-height: 70%;
    }

    .lightbox-content {
      padding: 0 1.5rem 1.5rem 1.5rem;
    }

    .lightbox-title {
      font-size: 1.5rem;
    }

    .lightbox-description {
      font-size: 1rem;
    }
  }
</style>
