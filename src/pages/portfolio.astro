      <div class="card-zoom-image bg-[url('/images/portfolio/glow.jpg')]"></div>
    </div>

    <div class="card-zoom aspect-golden">
      <div class="card-zoom-image bg-[url('/images/portfolio/shatters.jpg')]"></div>
    </div>

  </div>

</BaseLayout>
