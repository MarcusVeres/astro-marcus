---
import BaseLayout from '../layouts/BaseLayout.astro'

import HeroImageTiles from '../components/sections/HeroImageTiles.astro'
import FeatureCentered2x2 from '../components/sections/FeatureCentered2x2.astro'

import IconBatteryBig from '../components/atoms/IconBatteryBig.astro'

const pageTitle = "Resources"
---
<BaseLayout pageTitle={`RE sources ${pageTitle}!`}>


    <main id="content-wrapper" class="">

        <!-- darker-->
        <div class="text-yellow-100 debug-screens bg-gradient-to-br from-pink-900 to-gray-900"></div>
        <!-- pearlescent -->
        <div class="bg-gray-900 debug-screens bg-gradient-to-br from-pink-100 to-green-50 via-gray-50"></div>


        <section
            class="relative flex flex-col items-center justify-center text-center bg-black border-b border-gray-600 shadow-lg">

            </div>
            <p class="absolute z-0 mt-0 font-light tracking-widest uppercase text-gray-50/10 whitespace-nowrap"
                style="font-size: 64px; line-height: 4px;">
                Be the best you <span class="ml-16 mr-32 w-96"></span> that you can be
            </p>
            <div class="relative overflow-hidden">

                <img class="object-cover w-full max-w-4xl" src="/images/2021-10-22-avatar-space.png"
                    style="min-width:400px;" alt="Like a Marcus ready to be shot into outer space... Space Marcus!">
            </div>

        </section>

        <section class="relative flex flex-col lg:max-w-4 lg:mx-auto lg:justify-around">

            <div
                class="flex items-center flex-col justify-between gap-4 absolute z-10 max-w-xs mx-auto pane rounded-3xl rounded-b-[220px] -bottom-44 md:-bottom-[200px] right-4 left-4 bg-black/60">
                <div class="relative w-full">
                    <img class="w-full mx-auto max-w-[222px]" src="/images/logo.svg" alt="-M- Logo">
                </div>
                <h1 class="mt-4 text-2xl font-bold uppercase" style="letter-spacing: 0.12rem; font-size: 26px;">
                    Marcus Veres
                </h1>
                <p class="w-full p-4 mb-24 text-base font-bold text-center text-yellow-500 uppercase rounded-lg bg-black/50"
                    style="letter-spacing: 0.17rem;">
                    Unstoppable Ape
                </p>
                <div class="absolute flex items-center justify-center w-full h-32 overflow-visible bottom-10">
                    <div class="text-white social-icons">
                        <ul class="flex flex-row items-center justify-center space-x-2">
                            <li>
                                <a class="block p-3 text-white transition-all duration-500 ease-in-out border rounded-full shadow-sm border-black/40 bg-black/50 hover:scale-110 hover:bg-black group"
                                    href="#">
                                    <svg class="w-6 h-6 transition-all duration-500 ease-in-out fill-white opacity-10 group-hover:opacity-80 group-hover:scale-105"
                                        role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <title>GitHub</title>
                                        <path
                                            d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
                                    </svg>
                                </a>
                            </li>
                            <li>
                                <a class="block p-3 text-white transition-all duration-500 ease-in-out border rounded-full shadow-sm border-black/40 bg-black/50 hover:scale-110 hover:bg-black group"
                                    href="#">
                                    <svg class="w-6 h-6 transition-all duration-500 ease-in-out fill-white opacity-10 group-hover:opacity-80 group-hover:scale-105"
                                        role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <title>Pinterest</title>
                                        <path
                                            d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.401.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.354-.629-2.758-1.379l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.607 0 11.985-5.365 11.985-11.987C23.97 5.39 18.592.026 11.985.026L12.017 0z" />
                                    </svg>
                                </a>
                            </li>
                            <li>
                                <a class="block p-3 text-white transition-all duration-500 ease-in-out border rounded-full shadow-sm border-black/40 bg-black/50 hover:scale-110 hover:bg-black group"
                                    href="#">
                                    <svg class="w-6 h-6 transition-all duration-500 ease-in-out fill-white opacity-10 group-hover:opacity-80 group-hover:scale-105"
                                        role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <title>Twitter</title>
                                        <path
                                            d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                                    </svg>
                                </a>
                            </li>
                            <li>
                                <a class="block p-3 text-white transition-all duration-500 ease-in-out border rounded-full shadow-sm border-black/40 bg-black/50 hover:scale-110 hover:bg-black group"
                                    href="#">
                                    <svg class="w-6 h-6 transition-all duration-500 ease-in-out fill-white opacity-10 group-hover:opacity-80 group-hover:scale-105"
                                        role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <title>YouTube</title>
                                        <path
                                            d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                                    </svg>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>


        </section>

        <section class="relative">

            <!-- decorative background image -->
            <div class="absolute top-0 bottom-0 z-0 w-full bg-fixed bg-center bg-cover opacity-30 bg-grene-300"
                style="background-image: url('/images/render-1.png');"></div>

            <div class="pb-12 pt-44">
                <h2 class="pt-16 font-extrabold text-center text-white uppercase text-7xl drop-shadow-lg">
                    <!-- How will you improve today? -->
                    Become unstoppable
                </h2>
                <div class="font-extrabold text-center text-white uppercase mt-14 drop-shadow-lg">
                    <form class="max-w-2xl p-0 mx-auto transition-all duration-300 ease-in-out rounded-lg bg-black/40 hover:bg-black/80">
                        <input
                            class="w-full px-5 py-3 mt-0 text-2xl text-white bg-transparent border-none rounded-lg hover:ring-1"
                            type="text" placeholder="Search..." />
                    </form>
                </div>
                <ul
                    class="flex items-center justify-center w-full pb-6 mx-auto mt-4 font-bold tracking-wider text-center text-yellow-400 uppercase divide-x-2 cursor-pointer divide-yellow-600/20 border-opacity-20 text-md drop-shadow-md">
                    <li class="px-3 transition-all duration-500 opacity-40 hover:opacity-100">All</li>
                    <li class="px-3 transition-all duration-500 opacity-40 hover:opacity-100">Business</li>
                    <li class="px-3 transition-all duration-500 opacity-40 hover:opacity-100">Design</li>
                    <li class="px-3 transition-all duration-500 opacity-40 hover:opacity-100">Finance</li>
                    <li class="px-3 transition-all duration-500 opacity-40 hover:opacity-100">Food</li>
                    <li class="px-3 transition-all duration-500 opacity-40 hover:opacity-100">Graphics</li>
                    <li class="px-3 transition-all duration-500 opacity-40 hover:opacity-100">Internet</li>
                </ul>
            </div>

            <div class="container relative mx-auto text-left pt-44 max-w-8xl pb-44">
                <div class="grid grid-cols-1 gap-4 md:grid-cols-3 xl:grid-cols-5">

                    <!-- add hover group -->
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-56 bg-blue-700/30 rounded-2xl pane aspect-chonk hover:bg-blue-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Replace</span><br>A Car Battery
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-32 bg-purple-700/30 rounded-2xl pane aspect-chonk hover:bg-purple-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Bake</span><br>Carrot Muffins
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform bg-pink-700/30 -translate-y-0 rounded-2xl pane aspect-chonk hover:bg-pink-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Make</span><br>Things on the Internet
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-32 bg-yellow-400/30 rounded-2xl pane aspect-chonk hover:bg-yellow-400/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to</span><br>Calm Down Quickly
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-56 bg-green-700/30 rounded-2xl pane aspect-chonk hover:bg-green-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">Understanding</span><br>Domain Names
                        </h4>
						<IconBatteryBig />
                    </div>

                    <!-- add hover group -->
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-56 bg-pink-700/30 rounded-2xl pane aspect-chonk hover:bg-pink-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">Using</span><br>The Golden Proportion
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-32 bg-yellow-400/30 rounded-2xl pane aspect-chonk hover:bg-yellow-400/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Make</span><br>3D Art with Blender
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform bg-blue-700/30 -translate-y-0 rounded-2xl pane aspect-chonk hover:bg-blue-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">Introduction to</span><br>Affinity Publisher
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-32 bg-green-700/30 rounded-2xl pane aspect-chonk hover:bg-green-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Make</span><br>Vector Art
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-56 bg-purple-700/30 rounded-2xl pane aspect-chonk hover:bg-purple-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Play</span><br>Dungeons &amp;&nbsp;Dragons
                        </h4>
						<IconBatteryBig />
                    </div>

                    <!-- add hover group -->
                    <div
                        class="flex flex-col justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-56 bg-blue-700/30 items-left rounded-2xl pane aspect-chonk hover:bg-blue-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Design</span><br>A Web Page
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-32 bg-purple-700/30 rounded-2xl pane aspect-chonk hover:bg-purple-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Make a</span><br>Website Wireframe
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform bg-pink-700/30 -translate-y-0 rounded-2xl pane aspect-chonk hover:bg-pink-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Design a</span><br>Résumé
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-32 bg-yellow-400/30 rounded-2xl pane aspect-chonk hover:bg-yellow-400/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Play</span><br>Deadly Twister
                        </h4>
						<IconBatteryBig />
                    </div>
                    <div
                        class="flex flex-col items-center justify-center gap-8 py-2 transition-all duration-500 transform -translate-y-56 bg-green-700/30 rounded-2xl pane aspect-chonk hover:bg-green-700/80 hover:scale-125 hover:z-30 hover:shadow-2xl">
                        <h4 class="text-5xl font-extrabold tracking-tight">
                            <span class="text-2xl">How to Make</span><br>Dank Memes
                        </h4>
						<IconBatteryBig />
                    </div>


                </div>
            </div>

            <div class="flex items-center justify-center w-full h-40">
                <svg class="-mt-40 text-white w-14 h-14 opacity-40 animate-bounce">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 13l-3 3m0 0l-3-3m3 3V8m0 13a9 9 0 110-18 9 9 0 010 18z" />
                    </svg>
                </svg>
            </div>

        </section>

        <footer class="flex flex-col items-center pb-16 border-t shadow-2xl border-white/30">

            <div
                class="flex flex-col items-center px-10 border bg-black/60 border-white/20 xl:px-32 xl:w-full rounded-b-3xl xl:rounded-b-full max-w-7xl ">
                <div class="flex flex-col items-center justify-between w-full p-6 xl:flex-row">
                    <h2 class="text-6xl font-extrabold tracking-tighter">
                        Want<span
                            class="px-3 font-extrabold text-transparent bg-clip-text bg-gradient-to-br from-red-500 to-yellow-600">more?</span>
                    </h2>
                    <form
                        class="w-full max-w-lg mt-6 transition-all duration-500 ease-in-out border rounded-lg shadow-lg bg-black/50 border-black/40 hover:scale-125 hover:bg-black">
                        <div class="flex gap-0">
                            <input
                                class="w-full h-full px-4 py-4 text-lg leading-tight text-white bg-transparent border-none rounded-l-lg appearance-none focus:outline-none"
                                type="text" placeholder="you@email.com" aria-label="Full name">

                            <button
                                class="flex items-center flex-shrink-0 gap-2 px-4 py-2 m-1 text-lg font-bold tracking-tight text-white transition-all duration-300 border-white rounded-lg shadow-xl bg-gray-400/10 text-md hover:bg-green-500/40"
                                type="button">
                                Send Me Good Things
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
                <p class="pb-2 mt-4 mb-10 transition-all duration-300 opacity-30 hover:opacity-100">
                    Get a digest of art, recommendations, resources &amp; tutorials ~once per month.
                </p>
            </div>

        </footer>

    </main>

</BaseLayout>