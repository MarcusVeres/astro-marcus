---
import BaseLayout from '../layouts/BaseLayout.astro'

const pageTitle = "Contact"
---
<BaseLayout pageTitle={`${pageTitle} blog`}>

    <div class="bg-fixed bg-teal-400 min-h-[100vh] w-[100vw] bg-[url('https://marcusveres.com/static/media/bg-phones.5295b2f16bb144454de3.webp')]">

    <section class="flex flex-col items-center justify-center h-full md:flex-row">

        <img class="absolute object-center" src="../assets/img/bg-bulb-1.jpg" />

        <div class="relative flex flex-col items-center justify-center max-w-md glass rounded-3xl">
            <img class="max-w-xs" src="../assets/img/moonlit-logo-1.png" />
            <p class="-mb-6 tracking-widest uppercase">
                Illuminating
            </p>
            <h2 class="font-bold tracking-wide uppercase">
                Brilliant Ideas
            </h2>
            <p class="py-10 text-lg text-center text-gray-300">
                Put the pixels of your content in front of your users. Easy, fast and beautiful.
            </p>
            <button class="px-6 py-3 text-white uppercase bg-blue-400 rounded-lg shadow-xl bg-opacity-10 hover:bg-opacity-30">
                Contact Us Here
            </button>
            <div class="absolute text-2xl font-bold text-gray-200 -mt-18 -bottom-14">
                <button class="block float-right px-6 pt-2 pb-4 m-0 bg-blue-900 rounded-br-lg bg-opacity-30 hover:bg-opacity-50">
                    &gt;
