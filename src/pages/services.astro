---
import BaseLayout from '../layouts/BaseLayout.astro'

import HeroImageTiles from '../components/sections/HeroImageTiles.astro'
import FeatureCentered2x2 from '../components/sections/FeatureCentered2x2.astro'
import CTAGlassGlow from '../components/sections/CTAGlassGlow.astro'
import BentoThreeColumn from '../components/sections/BentoThreeColumn.astro'

const pageTitle = "Services"
---
<BaseLayout pageTitle={`I am the bestest Astro Marcus and this is my ${pageTitle}!`}>

	<FeatureCentered2x2 title="Everything you need to dominate" />

	<BentoThreeColumn />

	<CTAGlassGlow title="Supercharge your productivity." subtitle="Become more effective today!" />

	<div class="grid h-screen p-10 place-content-center bg-gradient-to-b from-black to-black">

		<a href="#" class="transition-all ease-in-out duration-700 block animate-background rounded-full border-8 border-black/80 bg-gradient-to-r from-green-300 via-blue-600 to-red-300 bg-[length:_400%_400%] p-2 [animation-duration:_6s] group hover:border-black/50 hover:bg-black/50">
			<span class="transition-all ease-in-out duration-700 block px-10 py-4 text-md md:text-[44px] text-white uppercase rounded-full bg-black/90 font-extralight group-hover:bg-black/50"> Push to Start </span>
		</a>

	</div>

	<div class="grid h-screen p-10 place-content-center bg-gradient-to-tr from-green-50 to-teal-50 via-pink-50">
	<a href="#" class="block animate-background rounded-full border-8 border-black/30 bg-gradient-to-r from-green-300 via-blue-600 to-red-300 bg-[length:_400%_400%] p-1 [animation-duration:_6s]">
		<span class="block px-10 py-4 text-lg font-medium rounded-full bg-pink-50"> Push to Start </span>
	</a>
	</div>

	<div class="bg-gradient-to-tr from-mint-100 via-slate-50 to-white dark:from-black dark:to-slate-900 bg-slate-200 dark:bg-slate-950 text-black dark:text-white gap-5 bg-no-repeat bg-cover flex min-h-[100vh] py-20 flex-col items-center justify-center">
	<!-- <div class="bg-gradient-to-tr from-mint-100 via-pink-200 to-pink-50 dark:from-black dark:to-slate-900 bg-slate-50 dark:bg-slate-950 text-black dark:text-white gap-5 bg-no-repeat bg-cover flex min-h-[100vh] py-20 flex-col items-center justify-center"> -->

		<div
		class="no-repeat border-[10px] border-black/80 w-full max-w-lg bg-conic/[from_var(--border-angle)] from-red-400 to-pink-500 dark:from-black via-green-300 dark:to-black animate-rotate-border-wide rounded-full p-[8px] transition-all ease-in-out duration-300 text-gray-300 hover:text-gray-100"
		>
		<div class="p-5 bg-black border rounded-full dark:bg-zinc-900 border-white/40">
			<p class="text-5xl text-center dark:text-white font-extralight">
			START NOW
			</p>
		</div>
		</div>

		<div
		class="no-repeat border-[16px] border-black/90 w-full max-w-lg bg-conic/[from_var(--border-angle)] from-red-400 to-pink-500 dark:from-black via-green-300 dark:to-black animate-rotate-border-wide rounded-full p-[4px] transition-all ease-in-out duration-300 text-gray-300 hover:text-gray-100 shadow-2xl shadow-slate-600"
		>
		<div class="p-5 bg-black rounded-full opacity-100 dark:bg-zinc-900 ">
			<p class="text-5xl text-center dark:text-white font-extralight">
			START NOW
			</p>
		</div>
		</div>

	</div>

</BaseLayout>