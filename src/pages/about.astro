---
import BaseLayout from '../layouts/BaseLayout.astro'

import ButtonAura from '../components/atoms/ButtonAura.astro'

import SocialIcons from '../components/blocks/SocialIcons.astro'
import SocialLinks from '../components/blocks/SocialLinks.astro'

import ThingsIDo from '../components/sections/ThingsIDo.astro'
import ToolsIUse from '../components/sections/ToolsIUse.astro'
import WorkExperience from '../components/sections/WorkExperience.astro'

import { Image } from 'astro:assets'
import avatar from '../assets/images/avatar.png'

const pageTitle = "Contact"
---
<BaseLayout pageTitle={`${pageTitle} blog`}>


	<div class="relative overflow-hidden bg-gray-900 isolate">
		<svg aria-hidden="true" class="absolute inset-0 -z-10 size-full mask-[radial-gradient(100%_100%_at_top_right,white,transparent)] stroke-white/10">
			<defs>
			<pattern id="983e3e4c-de6d-4c3f-8d64-b9761d1534cc" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
				<path d="M.5 200V.5H200" fill="none" />
			</pattern>
			</defs>
			<svg x="50%" y="-1" class="overflow-visible fill-gray-800/20">
			<path d="M-200 0h201v201h-201Z M600 0h201v201h-201Z M-400 600h201v201h-201Z M200 800h201v201h-201Z" stroke-width="0" />
			</svg>
			<rect width="100%" height="100%" fill="url(#983e3e4c-de6d-4c3f-8d64-b9761d1534cc)" stroke-width="0" />
		</svg>
		<div aria-hidden="true" class="absolute top-10 left-[calc(50%-4rem)] -z-10 transform-gpu blur-3xl sm:left-[calc(50%-18rem)] lg:top-[calc(50%-30rem)] lg:left-48 xl:left-[calc(50%-24rem)]">
			<div style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)" class="aspect-1108/632 w-277 bg-linear-to-r from-[#80caff] to-[#4f46e5] opacity-20"></div>
		</div>
		<div class="flex flex-col items-center justify-center px-6 pt-10 mx-auto md:flex-row max-w-7xl lg:flex lg:px-8 lg:pt-12">
			<div class="max-w-xl mx-auto shrink-0 lg:mx-0 lg:pt-8">
				<!-- <img src="/images/logo.svg" alt="Your Company" class="h-11" /> -->
				<h1 class="text-5xl font-semibold tracking-tight text-white text-pretty sm:text-7xl">Hello, I'm Marcus</h1>
				<p class="mt-8 text-lg font-medium text-gray-400 text-pretty sm:text-xl/8">

            I act as a bridge between vision and implementation. 
            I use open conversation to uncover your needs, and find patterns 
            others miss to solve your problems.
            I learn quickly and work intensely to 
            overcome challenges and achieve my objectives.

            <!-- I am adaptable, creative, and relentless. I work
            intensely and learn quickly to overcome obstacles and achieve my
            objectives.
            I believe that odds don't matter if you are tenacious, crazy, or
            stupid enough to see your ideas through to the end. I love what
            I do, and I am grateful I get to do it. -->
				</p>
				<div class="flex items-center mt-10 gap-x-6">
					<ButtonAura openInNewTab="true" label="Résumé" link="https://www.dropbox.com/scl/fi/rab76i0v93kvyie4i53q0/2025-09-25-one-page-resume.pdf?rlkey=il5dhrait1hhr8mmzpocyuycx&st=095sw1p6&dl=0" />
					<a href="#cv" class="font-semibold text-white text-sm/6">Learn more about me <span aria-hidden="true">↓</span></a>
				</div>
			</div>
			<div class="flex max-w-2xl mx-auto mt-16 sm:mt-24 lg:mt-0 lg:mr-0 lg:ml-10 lg:max-w-md lg:flex-none xl:ml-32">
				<div class="flex-none w-full max-w-3xl sm:max-w-5xl lg:max-w-2xl">
					<Image
						src={avatar}
						alt="Marcus Veres"
						class="rounded-md shadow-2xl w-304 bg-white/5 ring-1 ring-white/10"
						widths={[400, 600, 1080]}
						sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 450px"
						loading="eager"
					/>
				</div>
			</div>
		</div>
	</div>

  
  <!-- Logo cloud -->
  <div class="mx-auto mt-32 max-w-7xl sm:mt-16 sm:px-6 lg:px-8">
    <div class="relative px-6 py-16 overflow-hidden text-center bg-gray-900 isolate after:pointer-events-none after:absolute after:inset-0 after:inset-ring after:inset-ring-white/10 sm:rounded-3xl sm:px-16 after:sm:rounded-3xl">
      <h2 class="max-w-2xl mx-auto text-3xl font-bold tracking-tight text-white sm:text-4xl">Connect with me on social media</h2>
      <p class="max-w-xl mx-auto mt-6 text-gray-300 text-lg/8">
        You might stumble on my work across the internet. <br>Do stop by and say hello :)
      </p>
      <div class="items-center w-full max-w-lg mx-auto mt-12 gap-x-8 gap-y-12 sm:max-w-xl lg:max-w-4xl">
        <SocialIcons />
      </div>
      <div aria-hidden="true" class="absolute right-0 -top-24 -z-10 transform-gpu blur-3xl">
        <div style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)" class="aspect-1404/767 w-351 bg-linear-to-r from-[#80caff] to-[#4f46e5] opacity-25"></div>
      </div>
    </div>
  </div>

  <!-- <SocialLinks /> -->

  <!-- Skill Set -->
  <section id="cv" class="pt-20">
    <div class="container px-10 mx-auto text-gray-200 md:max-w-3xl xl:max-w-6xl">
      <ThingsIDo />
    </div>
  </section>

  <!-- Tool Set -->
  <section id="" class="pt-16">
    <div class="container px-10 mx-auto text-gray-200 md:max-w-3xl xl:max-w-6xl">
      <ToolsIUse />
    </div>
  </section>

  <!-- Work Experience -->
  <section id="" class="pt-16">
    <div class="container px-10 mx-auto text-gray-200 md:max-w-3xl xl:max-w-6xl">
      <WorkExperience />
    </div>
  </section>

</BaseLayout>
